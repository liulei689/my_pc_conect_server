<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Controls.Net7.App.MainPage" Loaded="ContentPage_Loaded" >
    <ScrollView>
        <VerticalStackLayout
            Spacing="15"
            Padding="30,0"          
            VerticalOptions="Start">
            <HorizontalStackLayout>
                <Border Stroke="Gray"
                    WidthRequest="200"
                    Padding="16,8"
                    HorizontalOptions="Center">
                    <Entry Text="1000"  x:Name="asdsd"/>
                </Border>
                <Button Text="登录" Clicked="Button_Clicked"/>
                <Button Text="增加时长" Clicked="Button_Clicked_1" />

            </HorizontalStackLayout>
            <ImageButton x:Name="imgpicstatus"  Source = "state_3.png" WidthRequest="200" HeightRequest="200" Clicked="imgpicstatus_Clicked"/>
            <Label x:Name="content" VerticalOptions="End" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
