<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Controls.Net7.App.Views.CodeAdd"
             >
    <VerticalStackLayout>
        <HorizontalStackLayout>
            <Editor x:Name="Use" Placeholder="用处"
        HeightRequest="60" WidthRequest="330" TextChanged="Use_TextChanged"/>
            <Button Text="粘贴"/>
        </HorizontalStackLayout>
        <Editor x:Name="UseDetail" Placeholder="用处细节"
        HeightRequest="60"/>
        <Button Text="确定"  Clicked="Button_Clicked"></Button>

        <Editor  x:Name="Code"  Placeholder="代码"
        HeightRequest="700"/>
    </VerticalStackLayout>
</ContentPage>